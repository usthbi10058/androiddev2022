<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    tools:context=".ForecastFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="#ffe9ef"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp">

            <TextView
                android:layout_width="139dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Monday"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/sunny" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Sunny 28°C-32°C"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp">

            <TextView
                android:layout_width="142dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Tuesday"
                android:textAlignment="center"/>

            <ImageView
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/rainy" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Rainy 19°C - 23°C"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp">

            <TextView
                android:layout_width="144dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Wednesday"
                android:textAlignment="center"/>

            <ImageView
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/storm" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Storm 16°C - 18°C"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp">

            <TextView
                android:layout_width="146dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Thursday"
                android:textAlignment="center"/>


            <ImageView
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/sunshine" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Sunny 25°C-27°C"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp">

            <TextView
                android:layout_width="145dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Friday"
                android:textAlignment="center"/>

            <ImageView
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/cloudy" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Mostly Cloudy 22°C-28°C"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp">

            <TextView
                android:layout_width="148dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Saturday"
                android:textAlignment="center"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/sunny" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Sunny 24°C-31°C"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp">

            <TextView
                android:layout_width="148dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Sunday"
                android:textAlignment="center"/>

            <ImageView
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/rainy" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Rainy 14°C-16°C"
                android:textAlignment="center"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>